{
  "name": "@0xsignal/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./index.ts",
  "scripts": {
    "dev": "bun --watch presentation/http/server.ts",
    "start": "bun presentation/http/server.ts",
    "build": "tsc -b tsconfig.json",
    "build:prod": "bun build ./presentation/http/server.ts --target=bun --minify --sourcemap --outdir=./dist",
    "start:prod": "bun ./dist/server.js",
    "lint": "eslint . --ext .ts",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@0xsignal/shared": "workspace:*",
    "@effect/platform": "^0.93.5",
    "@effect/platform-bun": "^0.85.0",
    "@types/ws": "^8.18.1",
    "effect": "^3.19.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@effect/language-service": "^0.56.0",
    "@effect/vitest": "^0.27.0",
    "@types/node": "^24.10.1",
    "bun-types": "^1.3.3",
    "typescript": "~5.9.3",
    "vitest": "^4.0.14"
  }
}
