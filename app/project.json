{
  "name": "app",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "app/src",
  "projectType": "application",
  "tags": ["type:app", "framework:react"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd app && bun run build",
        "cwd": "."
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd app && bun run dev",
        "cwd": "."
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd app && bun run lint",
        "cwd": "."
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd app && bun run preview",
        "cwd": "."
      }
    }
  }
}
