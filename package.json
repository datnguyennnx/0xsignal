{
  "name": "0xsignal-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": ["api", "app", "shared"],
  "scripts": {
    "dev": "cd app && bun run dev",
    "dev:all": "nx run-many -t serve --projects=app,api --parallel=2",
    "build": "cd app && bun run build",
    "build:all": "nx run-many -t build --projects=app,api",
    "lint": "nx run-many -t lint --all",
    "api:dev": "cd api && bun run dev",
    "api:analyze": "cd api && bun run analyze",
    "api:monitor": "cd api && bun run monitor",
    "app:dev": "cd app && bun run dev",
    "app:build": "cd app && bun run build",
    "install:all": "bun install"
  },
  "devDependencies": {
    "nx": "^22.1.0",
    "typescript": "~5.9.3"
  }
}
