{
  "name": "0xsignal-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": ["api", "app", "shared"],
  "scripts": {
    "dev": "nx run-many -t dev --projects=api,app --parallel",
    "dev:api": "nx run api:dev",
    "dev:app": "nx run app:dev",
    "start": "nx run-many -t start --projects=api,app --parallel",
    "start:api": "nx run api:start",
    "start:app": "nx run app:preview",
    "build": "nx run-many -t build --projects=api,app",
    "build:api": "nx run api:build",
    "build:app": "nx run app:build",
    "analyze": "nx run api:analyze",
    "monitor": "nx run api:monitor",
    "lint": "nx run-many -t lint --all",
    "clean": "nx reset && rm -rf node_modules api/node_modules app/node_modules shared/node_modules"
  },
  "devDependencies": {
    "nx": "^22.1.0",
    "typescript": "~5.9.3"
  }
}
